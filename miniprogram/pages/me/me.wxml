<!--pages/me/me.wxml-->
<view class='row'>
  <view class='user' bindtap="updateInfo">
    <image src='{{avatarUrl}}'></image>
    <view class='username' bindtap="login">{{nickName}}</view>
  </view>
</view>

<view class='base-info'>
  <navigator url='./myissuance/myissuance' class='col-12'>
    <view class="tags">
      <view class="imageIcon">
        <image src='/pages/icon/icon_fabu.png'></image>
      </view>
      <view class="text">
        <text>我的发布</text>
      </view>
      <view class="imageCome">
        <image class='pull-right' src='/pages/icon/icon_come.png'></image>
      </view>
    </view>
  </navigator>

  <navigator url='./mycollect/mycollect' class='col-12'>
    <view class="tags">
      <view class="imageIcon">
        <image src='/pages/icon/icon_shoucang.png'></image>
      </view>
      <view class="text">
        <text class="text">我的收藏</text>
      </view>
      <view class="imageCome">
        <image class='pull-right' src='/pages/icon/icon_come.png'></image>
      </view>
    </view>
  </navigator>

  <navigator url='./mycomment/mycomment' class='col-12'>
    <view class="tags">
      <view class="imageIcon">
        <image src='/pages/icon/icon_pinglun.png'></image>
      </view>
      <view class="text">
        <text class="text">我的评论</text>
      </view>
      <view class="imageCome">
        <image class='pull-right' src='/pages/icon/icon_come.png'></image>
      </view>
    </view>
  </navigator>

  <navigator url='./setting/setting' class='col-12'>
    <view class="tags">
      <view class="imageIcon">
        <image src='/pages/icon/icon_shezhi.png'></image>
      </view>
      <view class="text">
        <text class="text">个人信息</text>
      </view>
      <view class="imageCome">
        <image class='pull-right' src='/pages/icon/icon_come.png'></image>
      </view>
    </view>
  </navigator>

  <view bindtap="goCollege" class='col-12'>
    <view class="tags">
      <view class="imageIcon">
        <image src='/pages/icon/icon_college.png'></image>
      </view>
      <view class="text">
        <text class="text">活动管理</text>
      </view>
      <view class="imageCome">
        <image class='pull-right' src='/pages/icon/icon_come.png'></image>
      </view>
    </view>

  </view>


  <view bindtap="goadmin" class='col-12'>
    <view class="tags">
      <view class="imageIcon">
        <image src='/pages/icon/icon_admin.png'></image>
      </view>
      <view class="text">
        <text class="text">管理员设置</text>
      </view>
      <view class="imageCome">
        <image class='pull-right' src='/pages/icon/icon_come.png'></image>
      </view>
    </view>
  </view>


  
  <view bindtap="about" class='col-12'>
    <view class="tags">
      <view class="imageIcon">
        <image src='/pages/icon/about.png'></image>
      </view>
      <view class="text">
        <text class="text">关于我们</text>
      </view>
      <view class="imageCome">
        <image class='pull-right' src='/pages/icon/icon_come.png'></image>
      </view>
    </view>
  </view>
  
</view>