<!--pages/me/setting/setting.wxml-->
<!-- <text>信息设置</text> -->
<view class="top"></view>
<view class="infoPage">
  <!-- 头像昵称 -->
  <view class="info_images">
    <view class="imgview">
      <image class="image" src="{{avatarUrl}}"></image>
    </view>

    <view class="info_admin_college">
      <view class="info_admin_college_view">
        <image class="info_admin_college_view_Images"
          src="{{bosshead?'../../icon/collega_true.png':'../../icon/collega_false.png'}}">
        </image>
      </view>

      <view class="info_admin_college_view">
        <image class="info_admin_view_Images" 
        src="{{admin?'../../icon/admin_true.png':''}}">
        </image>
      </view>
    </view>
  </view>


  <view class="meinfo">
    <view class="text">
      昵称
    </view>
    <view class="item">
      {{nickName}}
    </view>
  </view>
  <view class="line"></view>

  <!-- 性别 -->
  <view class="meinfo">
    <view class="text">
      性别
    </view>
    <view>
      {{sex}}
    </view>
  </view>
  <view class="line"></view>

  <!-- 年龄 -->
  <view class="meinfo">
    <view class="text">
      年龄
    </view>
    <view>
      {{age}}
    </view>
  </view>
  <view class="line"></view>

  <!-- 所在地 -->
  <view class="meinfo">
    <view class="text">
      城市
    </view>
    <view>
      {{province}}{{city}}
    </view>
  </view>
  <view class="line"></view>

  <!-- 联系方式 -->
  <view>
    <!-- QQ -->
    <view class="meinfo">
      <view class="text">
        QQ
      </view>
      <view>
        {{qqnumber}}
      </view>
    </view>
    <view class="line"></view>

    <!-- 邮箱 -->
    <view class="meinfo">
      <view class="text">
        邮箱
      </view>
      <view>
        {{mailnumber}}
      </view>
    </view>
    <view class="line"></view>
  </view>


  <view class="button">
    <button type="primary" bindtap="settingInfo">修改个人信息</button>
  </view>


</view>