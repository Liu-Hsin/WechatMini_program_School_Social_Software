.header {
  margin: 90rpx 0 90rpx 50rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
 }
 .header image {
  width: 200rpx;
  height: 200rpx;
 }
.name{
  width: 100%;
  height: 60rpx;
  font-size: 40rpx;
  text-align: center;
  line-height: 60rpx;
  margin: 60rpx 0;
}
