/**/
/* 1. 设置整个页面的背景颜色 */
page {
  background: #f5f5f5;
}

/* 2.主盒子 */
.container {
  width: 100%;
  height: 100%;
  background-color: #eeeeeed8;
}

/* 3.左盒子*/
.nav_left {
  position: absolute;
  top: 0px;
  left: 0px;
  width: 20%;
  background: #f5f5f5;
  text-align: center;
}

.nav_left .nav_left_items {
  height: 80rpx;
  padding: 6rpx 0;
  border-bottom: 1px solid #dedede;
  font-size: 28rpx;
  line-height: 80rpx;
}

.nav_left .nav_left_items.active {
  background: #fff;
  color: #3385ff;
  border-left: 3px solid #3385ff;
}

/* 4.右盒子 */
.nav_right {
  position: absolute;
  top: 0;
  left: 20%;
  width: 80%;
  height: 100%;
  padding: 10px;
  box-sizing: border-box;
  background: #fff;
  display: inline-block;
  overflow: scroll;
}

/* 公告栏 */
.blockNotice {
  margin-right: 10px;
  margin-top: 10rpx;
  padding-bottom: 60px;
}

.weui-cell {
  padding: 8px;
}

.inputArea {
  margin-top: 100px;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border: 0.5px #cccccc93 ridge;
  padding: 8px 16px;
  width: 82%;
}

.inputText {
  height: 80px;
  width: 100%;
}

.line {
  margin: 16rpx 0;
  height: 1px;
  background-color: #e7e6e665;
}

.button {
  margin-top: 60px;
}


/* 轮播图 */

.imgData_items {
  display: flex;
  flex-flow: row;
}

.imgData {
  padding: 10px;
  width: 70%;
  text-align: center;
}

.imgDelete {
  padding: 10px;
  width: 30%;
  height: 220rpx;
  text-align: center;
  line-height: 220rpx;
}

.imgData_item {
  width: 400rpx;
  height: 200rpx;
}

.imgData_delete {
  width: 72rpx;
  height: 72rpx;
}
.tipsBar{
  margin: 10px;
}

.blockInfo{
  padding-bottom: 40rpx;
}

/* 社团人员 */

