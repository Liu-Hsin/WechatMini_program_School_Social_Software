  display: flex;
  flex-flow: row;
}

.weui-cell_info {
  margin-left: 10px;
  width: 340rpx;
  height: 110rpx;
}

.weui-cell_Name {
  padding-bottom: 2px;
}

.weui-cell_Info_img {
