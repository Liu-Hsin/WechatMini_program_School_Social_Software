/* 文章列表 */
.weui-cell_title {
  font-weight: 545;
  font-size: 34rpx;
}

.weui-cell_title_Contents {
  margin: 6rpx;
  padding: 4rpx;
  border-radius: 4px;
  background-color: #e0e0e02c;
  width: 480rpx;
}

.weui-cell_title_articleContent {
  height: 50px;
  font-size: 15px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.weui-cell_articleInfo {
  font-size: small;
  color: #6b6b6b;
}

.tips {
  font-size: small;
  color: #6b6b6b;
}

.weui-cell_type {
  font-size: 14px;
  color: #6b6b6b;
}

.weui-cell_delete_img {
  margin-left: 1vw;
  padding-top: 20%;
}

.weui-cell_deleteImg {
  width: 50rpx;
  height: 50rpx;
}


/* 评论 */

.weui-cell_comments {
  font-weight: 545;
  font-size: 34rpx;
  margin: 2px 0 2px 6px;
}

.weui-cell_commenter {
  font-size: 14px;
  color: #6b6b6bce;
  margin-left: 12px;
}

.weui-cell_comment_Contents {
  margin: 6rpx;
  padding: 4rpx;
  border-radius: 4px;
  background-color: #e0e0e021;
  width: 480rpx;
}

.weui-cell_title_commentContent {
  margin-left: 4px;
  height: 26px;
  font-size: 16px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.weui-cell_author{
  padding-left: 4px;
}
.tip {
